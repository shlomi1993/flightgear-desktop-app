    <Canvas Background="AliceBlue">
        <Grid Height="720" Width="1280" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.357,0.436">
            <Slider Value="{Binding VM_Throttle2}" Maximum="1" Minimum="0" RenderTransformOrigin="0.5,0.5" Margin="625,188,479,519">

                <Slider.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-89.837"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Slider.RenderTransform>
            </Slider>
            <TextBox HorizontalAlignment="Left" Height="18" Margin="619,290,0,0" Text="Throttle 1" TextWrapping="Wrap" VerticalAlignment="Top" Width="67"/>
            <TextBox HorizontalAlignment="Left" Height="18" Margin="691,290,0,0" Text="Throttle 2" TextWrapping="Wrap" VerticalAlignment="Top" Width="67"/>
            <TextBox HorizontalAlignment="Left" Height="17" Margin="796,66,0,0" Text="Rudder" TextWrapping="Wrap" VerticalAlignment="Top" Width="46"/>
            
            <TextBox HorizontalAlignment="Left" Height="22" Margin="951,80,0,0" Text="Altimeter" TextWrapping="Wrap" VerticalAlignment="Top" Width="69" TextChanged="TextBox_TextChanged"/>
            <TextBox HorizontalAlignment="Left" Height="22" Margin="951,114,0,0" Text="Airspeed" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"/>
            <TextBox HorizontalAlignment="Left" Height="22" Margin="951,150,0,0" Text="Direction" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"/>
            <TextBox HorizontalAlignment="Left" Height="22" Margin="951,184,0,0" Text="Pitch" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"/>
            <TextBox HorizontalAlignment="Left" Height="22" Margin="951,219,0,0" Text="Roll" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"/>
            <TextBox HorizontalAlignment="Left" Height="22" Margin="951,252,0,0" Text="Yaw" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"/>
            <TextBlock Text="{Binding VM_AltimeterAltitude}" TextWrapping="Wrap" Margin="1033,85,198,619" Canvas.Left="718" Canvas.Top="314" Height="38" Width="90"/>
            <TextBlock Text="{Binding VM_AirSpeed}" TextWrapping="Wrap" Margin="1033,114,198,590"/>
            <TextBlock Text="{Binding VM_IndicatedHeading}" TextWrapping="Wrap" Margin="1033,151,198,553"/>
            <TextBlock Text="{Binding VM_AttitudeIndicatedPitch}" TextWrapping="Wrap" Margin="1033,184,198,520"/>
            <TextBlock Text="{Binding VM_AttitudeIndicatedRoll}" TextWrapping="Wrap" Margin="1033,221,198,483"/>
            <TextBlock Text="{Binding VM_SideSlip}" TextWrapping="Wrap" Margin="1033,253,198,451"/>

        </Grid>
        <Label Content="Flight Simulator Manager" FontSize="32" FontWeight="Bold" FontStyle="Italic" Height="70" Canvas.Left="22" Canvas.Top="10" Width="402"/>

        <Button x:Name ="ConnectButton" Foreground = "Black" Click="ClickConnect" Height="26" Width="80" Canvas.Left="911" Canvas.Top="32" >Connect</Button>
        <Button x:Name ="DisconnectButton" Foreground = "Black" Click="ClickDisconnect" Height="26" Width="80" RenderTransformOrigin="0.06,0.6" Canvas.Left="1081" Canvas.Top="32">Disconnect</Button>
        <Button x:Name="BrowseButton" Foreground = "Black" Click="LoadData" Height="26" Width="80" Canvas.Left="996" Canvas.Top="32">Load Data</Button>
        <Button x:Name="ExitButton" Foreground = "Red" Click="Exit" Height="26" Width="80" Canvas.Left="1166" Canvas.Top="32" RenderTransformOrigin="0.675,3.463">Exit</Button>
        <!--View:ConnectionDataView x:Name="ConnectionButtons" Canvas.Left="670" Canvas.Top="10" Height="70" Width="600"  /-->
        <Button Content="Temp Start Button" Height="54" Canvas.Left="550" Canvas.Top="13" Width="222" Click="Button_Click" />
        <Slider Value="{Binding VM_Throttle1}" Maximum="1" Minimum="0"  Height="13" Canvas.Left="565" Canvas.Top="190" Width="176" RenderTransformOrigin="0.515,-0.27">

            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-89.837"/>
                    <TranslateTransform X="-12.642" Y="7.343"/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider Value="{Binding VM_Rudder}" Maximum="1" Minimum="-1" Height="20" Width="180" RenderTransformOrigin="0.5,0.5" Canvas.Left="728" Canvas.Top="86">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="359.573"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
