<Window x:Class="FlightSimulatorDesktopApp.View.GraphsSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorDesktopApp.ViewModel" 
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="GraphsSettings" Height="550" Width="1200">
    <Window.DataContext>
        <local:GraphsSettingsViewModel/>
    </Window.DataContext>
    <Grid>
        <oxy:PlotView Model="{Binding HistoryModel}" Margin="0,0,600,10"/>
        <oxy:PlotView Model="{Binding CorelativeModel}" Margin="605,10,10,225"/>
        <oxy:PlotView Model="{Binding LinRegModel}" Margin="610,309,0,10"/>
    </Grid>
</Window>
